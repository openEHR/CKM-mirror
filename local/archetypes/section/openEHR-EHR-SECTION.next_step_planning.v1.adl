definition
	SECTION[at0000] matches {	-- Pianificación del siguiente paso
		items cardinality matches {1..*; unordered} matches {
			allow_archetype INSTRUCTION[at0002] occurrences matches {0..*} matches {	-- Solicitud de informe diagnóstico
				include
					archetype_id/value matches {/openEHR-EHR-INSTRUCTION\.request-report(-[a-zA-Z0-9_]+)*\.v1/}
				exclude
					archetype_id/value matches {/.*/}
			}
			allow_archetype INSTRUCTION[at0003] occurrences matches {0..*} matches {	-- Solicitud de volante
				include
					archetype_id/value matches {/openEHR-EHR-INSTRUCTION\.request-referral(-[a-zA-Z0-9_]+)*\.v1/}
				exclude
					archetype_id/value matches {/.*/}
			}
		}
	}



