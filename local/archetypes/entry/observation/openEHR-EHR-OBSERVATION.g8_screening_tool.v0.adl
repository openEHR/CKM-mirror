definition
	OBSERVATION[at0000] matches {    -- G-8 screening tool
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {    -- Has food intake declined over the past 3 months due to loss of appetite, digestive problems, chewing, or swallowing difficulties?
										value matches {
											0.0|[local::at0038],
											1.0|[local::at0039],
											2.0|[local::at0040]
										}
									}
									ELEMENT[at0008] occurrences matches {0..1} matches {    -- Weight loss during the last 3 months?
										value matches {
											0.0|[local::at0009],
											1.0|[local::at0010],
											2.0|[local::at0011],
											3.0|[local::at0012]
										}
									}
									ELEMENT[at0013] occurrences matches {0..1} matches {    -- Mobility?
										value matches {
											0.0|[local::at0014],
											1.0|[local::at0015],
											2.0|[local::at0016]
										}
									}
									ELEMENT[at0017] occurrences matches {0..1} matches {    -- Neuropsychological problems?
										value matches {
											0.0|[local::at0018],
											1.0|[local::at0019],
											2.0|[local::at0020]
										}
									}
									ELEMENT[at0021] occurrences matches {0..1} matches {    -- Body mass index (BMI)?
										value matches {
											0.0|[local::at0022],
											1.0|[local::at0023],
											2.0|[local::at0024],
											3.0|[local::at0025]
										}
									}
									ELEMENT[at0026] occurrences matches {0..1} matches {    -- Takes more than three prescription drugs per day?
										value matches {
											0.0|[local::at0027],
											1.0|[local::at0028]
										}
									}
									ELEMENT[at0029] occurrences matches {0..1} matches {    -- In comparison with other people of the same age, how does the patient consider his/her health status?
										value matches {
											0.0|[local::at0045],
											0.5|[local::at0046],
											1.0|[local::at0047],
											2.0|[local::at0048]
										}
									}
									ELEMENT[at0031] occurrences matches {0..1} matches {    -- Age
										value matches {
											0.0|[local::at0032],
											1.0|[local::at0033],
											2.0|[local::at0034]
										}
									}
									ELEMENT[at0035] occurrences matches {0..1} matches {    -- Total score
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::380]>
												list = <
													["1"] = <
														units = <"1">
														magnitude = <|0.0..17.0|>
														precision = <|1|>
													>
												>
											>
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0049] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0051] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


