definition
	EVALUATION[at0000] matches {    -- Activities of daily living (ADL) summary
		data matches {
			ITEM_TREE[at0003] matches {    -- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0024] occurrences matches {0..1} matches {    -- Overall ADL status
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0025,    -- Fully independent
									at0026,    -- Independent with device
									at0027,    -- Partially dependent
									at0028]    -- Fully dependent
								}
							}
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0029] occurrences matches {0..1} matches {    -- Overall description
						value matches {
							DV_TEXT matches {*}
						}
					}
					CLUSTER[at0023] occurrences matches {0..*} matches {    -- Specific activity
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0004] matches {    -- Activity name
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0020] occurrences matches {0..1} matches {    -- Activity category
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0021,    -- Basic activity
											at0022]    -- Instrumental activity
										}
									}
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0005] occurrences matches {0..1} matches {    -- Clinical description
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0006] occurrences matches {0..1} matches {    -- Capability
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0007,    -- Fully independent
											at0008,    -- Independent with assistive device
											at0009,    -- Partially dependent
											at0010,    -- Fully dependent
											at0019,    -- Not applicable
											at0033]    -- Unknown
										}
									}
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0018] occurrences matches {0..*} matches {    -- Limitation
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0034] occurrences matches {0..*} matches {    -- Support requirement
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0011] occurrences matches {0..1} matches {    -- Support description
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0035] occurrences matches {0..*} matches {    -- Assistive device requirement
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0012] occurrences matches {0..1} matches {    -- Assistive device description
								value matches {
									DV_TEXT matches {*}
								}
							}
							allow_archetype CLUSTER[at0013] occurrences matches {0..*} matches {    -- Assistive device details
								include
									archetype_id/value matches {/openEHR-EHR-CLUSTER\.device(-[a-zA-Z0-9_]+)*\.v1/}
							}
							allow_archetype CLUSTER[at0014] occurrences matches {0..*} matches {    -- Additional details
								include
									archetype_id/value matches {/.*/}
							}
							ELEMENT[at0036] occurrences matches {0..1} matches {    -- Date assessed
								value matches {
									DV_DATE_TIME matches {*}
								}
							}
							ELEMENT[at0015] occurrences matches {0..1} matches {    -- Comment
								value matches {
									DV_TEXT matches {*}
								}
							}
						}
					}
					allow_archetype CLUSTER[at0030] occurrences matches {0..*} matches {    -- Additional details
						include
							archetype_id/value matches {/.*/}
					}
					ELEMENT[at0031] occurrences matches {0..1} matches {    -- Overall comment
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0016] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0032] occurrences matches {0..1} matches {    -- Last updated
						value matches {
							DV_DATE_TIME matches {*}
						}
					}
					allow_archetype CLUSTER[at0017] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


ontology
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"Activities of daily living (ADL) summary">
					description = <"Summary information about an individual's ability to perform basic or instrumental activities of daily living (ADL).
">
				>
				["at0003"] = <
					text = <"Tree">
					description = <"@ internal @">
				>
				["at0004"] = <
					text = <"Activity name">
					description = <"The name of the specific activity of daily living.">
					comment = <"For example: walking, feeding, toileting, managing medications, shopping or housecleaning. Coding of the 'Activity name' with an external terminology is recommended, if available.">
				>
				["at0005"] = <
					text = <"Clinical description">
					description = <"Narrative description about the individual's ability to perform the specific activity.">
					comment = <"For example: \"Moves around in a wheelchair, can walk a couple of steps only.\"">
				>
				["at0006"] = <
					text = <"Capability">
					description = <"Categorisation of the individual's ability to perform the specific activity.">
				>
				["at0007"] = <
					text = <"Fully independent">
					description = <"The individual is able to perform the activity without human support or assistive devices.">
				>
				["at0008"] = <
					text = <"Independent with assistive device">
					description = <"The individual is able to perform the activity with the use of assistive devices but without human support.">
				>
				["at0009"] = <
					text = <"Partially dependent">
					description = <"The individual is able to perform some of the activity but needs partial human support. Assistive devices may be used.">
				>
				["at0010"] = <
					text = <"Fully dependent">
					description = <"The individual is unable to perform most or all of the activity and needs full human support. Assistive devices may be used.">
				>
				["at0011"] = <
					text = <"Support description">
					description = <"Description about any human support required to carry out the specific activity.">
					comment = <"For example: \"Requires assistance from another person to transfer from bed to chair\" or \"Needs supervision when walking outdoors\".">
				>
				["at0012"] = <
					text = <"Assistive device description">
					description = <"Description about any assistive devices required to carry out the specific activity.">
				>
				["at0013"] = <
					text = <"Assistive device details">
					description = <"Structured details about assistive devices used to carry out the specific activity.">
				>
				["at0014"] = <
					text = <"Additional details">
					description = <"Additional structured details about the specific activity.">
				>
				["at0015"] = <
					text = <"Comment">
					description = <"Additional narrative about the specific activity not captured in other fields.">
				>
				["at0016"] = <
					text = <"Item tree">
					description = <"@ internal @">
				>
				["at0017"] = <
					text = <"Extension">
					description = <"Additional information required to extend the model with local content or to align with other reference models or formalisms.">
					comment = <"For example: local information requirements; or additional metadata to align with FHIR.">
				>
				["at0018"] = <
					text = <"Limitation">
					description = <"A limitation of the individual in carrying out the specific activity.">
					comment = <"For example: for the activity of eating, the limitations are 'Difficulty holding a glass of water' or 'Difficulty cutting up food'. Coding of the 'Limitation' with an external terminology is recommended, if available.">
				>
				["at0019"] = <
					text = <"Not applicable">
					description = <"The activity does not apply to the individual.">
				>
				["at0020"] = <
					text = <"Activity category">
					description = <"The category of the specific activity.">
				>
				["at0021"] = <
					text = <"Basic activity">
					description = <"The identified activity is a basic activity of daily living (BADL). For example: walking, feeding or toileting.">
				>
				["at0022"] = <
					text = <"Instrumental activity">
					description = <"The identified activity is an instrumental activity of daily living (IADL). For example: managing medications, shopping or housecleaning.">
				>
				["at0023"] = <
					text = <"Specific activity">
					description = <"A specific activity of daily living.">
				>
				["at0024"] = <
					text = <"Overall ADL status">
					description = <"Categorisation of the individual's ability to perform all activities of daily living.">
				>
				["at0025"] = <
					text = <"Fully independent">
					description = <"The individual is able to perform all activities of daily living without human support or assistive devices.">
				>
				["at0026"] = <
					text = <"Independent with device">
					description = <"The individual is able to perform all activities of daily living with the use of assistive devices but without human support.">
				>
				["at0027"] = <
					text = <"Partially dependent">
					description = <"The individual is able to perform some activities of daily living but needs partial human support. Assistive devices may be used.">
				>
				["at0028"] = <
					text = <"Fully dependent">
					description = <"The individual is unable to perform most or all activities of daily living and needs full human support. Assistive devices may be used.">
				>
				["at0029"] = <
					text = <"Overall description">
					description = <"Narrative description about the individual's ability to perform all activities of daily living.">
				>
				["at0030"] = <
					text = <"Additional details">
					description = <"Additional structured details about the ADL summary.">
				>
				["at0031"] = <
					text = <"Overall comment">
					description = <"Additional narrative about the ADL summary not captured in other fields.">
				>
				["at0032"] = <
					text = <"Last updated">
					description = <"The date/time this ADL summary was last updated.">
				>
				["at0033"] = <
					text = <"Unknown">
					description = <"It is unknown to which degree the individual is able to perform the activity.">
				>
				["at0034"] = <
					text = <"Support requirement">
					description = <"A human support task required to carry out the specific activity.">
					comment = <"For example: for the activity of eating, support requirements can be 'preparing thickened liquids' or 'cutting up food'. Coding of 'Support requirement' with an external terminology is recommended, if available.">
				>
				["at0035"] = <
					text = <"Assistive device requirement">
					description = <"An assistive device required to carry out the specific activity.">
					comment = <"For example: for the activity of eating, assistive device requirements can be 'liquid thickening agent' or 'easy grip cutlery'. Coding of 'Assistive device requirement' with an external terminology is recommended, if available.">
				>
				["at0036"] = <
					text = <"Date assessed">
					description = <"The date/time when the specific activity was assessed.">
				>
			>
		>
