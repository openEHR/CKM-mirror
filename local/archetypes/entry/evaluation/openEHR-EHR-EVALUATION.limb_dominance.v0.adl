definition
	EVALUATION[at0000] matches {    -- Limb dominance
		data matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {    -- Handedness
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0003,    -- Right Handed
									at0004,    -- Left Handed
									at0005,    -- Ambidextrous
									at0006]    -- Cross Dominant
								}
							}
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {    -- Footedness
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0009,    -- Right Footed
									at0010,    -- Left Footed
									at0011,    -- Ambipedal
									at0012]    -- Cross Dominant
								}
							}
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0016] occurrences matches {0..1} matches {    -- Assessment Method
						value matches {
							DV_TEXT matches {*}
							DV_CODED_TEXT matches {*}
						}
					}
					ELEMENT[at0013] occurrences matches {0..1} matches {    -- Comment
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0014] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0015] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


ontology
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"Limb dominance">
					description = <"Limb dominance is a patient's natural preference for a specific hand and/or foot for performing various motor tasks.">
				>
				["at0001"] = <
					text = <"Item tree">
					description = <"@ internal @">
				>
				["at0002"] = <
					text = <"Handedness">
					description = <"Which hand the individual typically uses for common tasks.">
				>
				["at0003"] = <
					text = <"Right Handed">
					description = <"The individual primarily uses their right hand.">
				>
				["at0004"] = <
					text = <"Left Handed">
					description = <"The individual primarily uses their left hand.">
				>
				["at0005"] = <
					text = <"Ambidextrous">
					description = <"The individual uses both hands equally.">
				>
				["at0006"] = <
					text = <"Cross Dominant">
					description = <"The individual uses different hands depending on the task, such as writing with their right, while using a hammer with their left.">
				>
				["at0008"] = <
					text = <"Footedness">
					description = <"Which foot the individual typically uses for common tasks.">
				>
				["at0009"] = <
					text = <"Right Footed">
					description = <"The individual primarily uses their right foot.">
				>
				["at0010"] = <
					text = <"Left Footed">
					description = <"The individual primarily uses their left foot.">
				>
				["at0011"] = <
					text = <"Ambipedal">
					description = <"The individual uses both feet equally.">
				>
				["at0012"] = <
					text = <"Cross Dominant">
					description = <"The individual uses different foot depending on the task, such as kicking with their right, while pushing off with their left.">
				>
				["at0013"] = <
					text = <"Comment">
					description = <"Additional narrative about the limb dominance, not captured in other fields.">
				>
