				>
				["at0004"] = <
					text = <"Description">
					description = <"Description of the attempt.">
				>
				["at0005"] = <
					text = <"Therapeutic intervention">
					description = <"Details of therapeutic agent/s used.">
				>
				["at0006"] = <
					text = <"Agent">
