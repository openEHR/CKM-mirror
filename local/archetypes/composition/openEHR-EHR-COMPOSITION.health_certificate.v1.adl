definition
	COMPOSITION[at0000] matches {    -- Health certificate
		category matches {
			DV_CODED_TEXT[at0001] matches {    -- Coded text
				defining_code matches {
					[openehr::433]
				}
			}
		}
		context matches {
			EVENT_CONTEXT[at0002] matches {    -- Event Context
				other_context matches {
					ITEM_TREE[at0003] matches {    -- Item tree
						items cardinality matches {0..*; unordered} matches {
							allow_archetype CLUSTER[at0004] occurrences matches {0..*} matches {    -- Individual
								include
									archetype_id/value matches {/openEHR-EHR-CLUSTER\.person\.v1/}
							}
							ELEMENT[at0006] occurrences matches {0..*} matches {    -- Certificate ID
								value matches {
									DV_IDENTIFIER matches {*}
									DV_TEXT matches {*}
								}
							}
							allow_archetype CLUSTER[at0009] occurrences matches {0..*} matches {    -- Extension
								include
									archetype_id/value matches {/.*/}
							}
							ELEMENT[at0010] occurrences matches {0..*} matches {    -- Certificate type
								value matches {
									DV_TEXT matches {*}
								}
							}
						}
					}
				}
			}
		}
	}




ontology
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"Health certificate">
					description = <"A formal statement about the health status or situation related to an individual.">
				>
				["at0001"] = <
					text = <"Coded text">
					description = <"">
				>
				["at0002"] = <
					text = <"Event Context">
					description = <"">
				>
				["at0003"] = <
					text = <"Item tree">
					description = <"@ internal @">
				>
				["at0004"] = <
					text = <"Individual">
					description = <"Identification of the subject of the certificate.">
					comment = <"This SLOT identifies the subject of the certificate. In comprehensive openEHR EHRs this may be redundant if the formal demographics service or master patient index supplies details about the subject of the certificate. If the subject of the certificate is not the subject of care, this information may need to be entered manually, for example a parent of the child patient. In addition, when creating a screen layout or template for printing, a subset of the CLUSTER.person could be constrained to represent the precise details appropriate for the use case.">
				>
				["at0006"] = <
					text = <"Certificate ID">
					description = <"Identification information about the certificate.">
				>
				["at0009"] = <
					text = <"Extension">
					description = <"Additional information required to capture local content or to align with other reference models/formalisms.">
					comment = <"For example: local information requirements or additional metadata to align with FHIR.">
				>
				["at0010"] = <
					text = <"Certificate type">
					description = <"Type of certificate.">
					comment = <"For example: Vaccination status; Fitness for flying; Medical certificate.">
				>
			>
		>
		["nb"] = <
			items = <
				["at0000"] = <
					text = <"Helseattest">
					description = <"Formell attestering om helsestatus eller situasjon relatert til et individ.">
				>
				["at0001"] = <
					text = <"Coded text">
					description = <"">
				>
				["at0002"] = <
					text = <"Event Context">
					description = <"">
				>
				["at0003"] = <
					text = <"Item tree">
					description = <"@ internal @">
				>
				["at0004"] = <
					text = <"Individ">
					description = <"Identifikasjon av hvem attesten gjelder for.">
					comment = <"Formålet med denne SLOT er å identifisere hvem attesten gjelder for. I et gjennomført openEHR pasientjournalsystem så kan dette være overflødig informasjon gitt at det finnes detaljer om individet i demografitjeneren eller pasientindexen. I de tilfeller der individet ikke er den som blir behandlet så kan denne type informasjon bli registrert manuelt, for eksempel; forelder der barnet er den som blir behandlet. I tillegg så kan deler av innholdet i CLUSTER.person bli benyttet i utforming/berikelse av blant annet en printmal.">
				>
				["at0006"] = <
					text = <"Attest ID">
					description = <"Identifikasjonsinformasjon om attesten.">
				>
				["at0009"] = <
					text = <"Tilleggsinformasjon">
					description = <"Ytterligere informasjon som trengs for å kunne registrere lokalt definert innhold eller for å tilpasse til andre referansemodeller eller formalismer.">
					comment = <"For eksempel: lokale informasjonsbehov eller ytterligere metadata for å kunne tilpasse til tilsvarende konsepter i FHIR.">
				>
				["at0010"] = <
					text = <"Attesttype">
					description = <"Type attest.">
					comment = <"For eksempel: Vaksinasjonsstatus; Skikkethet for å betjene fly; Legeerklæring.">
				>
			>
		>
		["de"] = <
			items = <
				["at0000"] = <
					text = <"Zertifikat">
					description = <"Formelle gesundheitsbezogene Erklärung, die von einem Kliniker über eine Person gemacht wird.">
				>
				["at0001"] = <
					text = <"Codierter Text">
					description = <"">
				>
				["at0002"] = <
					text = <"Ereigniskontext">
					description = <"">
				>
				["at0003"] = <
					text = <"Item tree">
					description = <"@ internal @">
				>
				["at0004"] = <
					text = <"Person">
					description = <"Identifizierung des Subjekts des Zertifikats.">
					comment = <"Dieser SLOT identifiziert das Subjekt des Zertifikats. In umfassenden openEHR-EHRs kann dies überflüssig sein, wenn der formale Demografie-Dienst oder der Master-Patientenindex (MPI) Details zum Subjekt des Zertifikats liefert. Wenn das Subjekt des Zertifikats nicht der Patient ist, müssen diese Informationen möglicherweise manuell eingegeben werden, zum Beispiel bei einem Elternteil des Kindespatienten. Darüber hinaus kann bei der Erstellung eines Bildschirmlayouts oder eines Templates für den Druck eine Teilmenge von CLUSTER.person eingeschränkt werden, um die genauen Details für den Anwendungsfall darzustellen.">
				>
				["at0006"] = <
					text = <"Zertifikats-ID">
					description = <"Identifikationsinformationen über das Zertifikat.">
				>
				["at0009"] = <
					text = <"Erweiterung">
					description = <"Zusätzliche Informationen zur Erfassung lokaler Inhalte oder Anpassung an andere Referenzmodelle/Formalismen.">
					comment = <"Zum Beispiel: Lokaler Informationsbedarf oder zusätzliche Metadaten zur Anpassung an FHIR-Ressourcen.">
				>
				["at0010"] = <
					text = <"Zertifikatstyp">
					description = <"Art des Zertifikats.">
					comment = <"Beispiel: Impfstatus, Flugtauglichkeit, Medizinisches Attest.">
				>
			>
		>
	>
