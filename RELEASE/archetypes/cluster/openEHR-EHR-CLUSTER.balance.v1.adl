									ELEMENT[at0028] occurrences matches {0..1} matches {	-- Loss of balance
										value matches {
											DV_BOOLEAN matches {
												value matches {True}
											}
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {	-- Affected Side
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
